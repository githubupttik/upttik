<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
    <name>Operator Assistant</name>
    <author>Valerio Finazzo</author>
    <creationDate>Maggio 2016</creationDate>
    <authorEmail>valerio.finazzo@gmail.com</authorEmail>
    <authorUrl>www.valeriofinazzo.it</authorUrl>
    <version>1.1.3</version>
    <license>http://www.gnu.org/licenses/gpl-2.0.html</license>
    <install>
            <sql>
                    <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
            </sql>
    </install>
    <uninstall>
            <sql>
                    <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
            </sql>
    </uninstall>
        
    <files folder="site">
        <filename>index.html</filename>
        <filename>operatorassistant.php</filename>
        <filename>controller.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>language</folder>
        <folder>assets</folder>
    </files>
    
    <administration>
        <menu>Operator Assistant</menu>
        <files folder="admin">
            <filename>index.html</filename>
            <filename>operatorassistant.php</filename>
            <filename>controller.php</filename>
            <folder>views</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>assets</folder>
        </files>
        <languages folder="admin">
            <language tag="en-GB">language/en-GB/en-GB.com_operatorassistant.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.com_operatorassistant.sys.ini</language>
            <language tag="it-IT">language/it-IT/it-IT.com_operatorassistant.ini</language>
            <language tag="it-IT">language/it-IT/it-IT.com_operatorassistant.sys.ini</language>
        </languages>
    </administration>
    
</extension>